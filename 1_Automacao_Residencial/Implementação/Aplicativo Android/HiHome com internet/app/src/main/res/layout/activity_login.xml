<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLogin.Background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="com.example.ayrton.hihome.MainActivity_Login">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:contextClickable="false"
        android:src="@drawable/casa" />

    <EditText
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="Nome do UsuÃ¡rio"
        android:inputType="textWebEmailAddress"
        android:textAllCaps="false"
        android:textColor="@color/colorLogin.Accent"
        android:textColorHint="@color/colorLogin.Accent" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColor="@color/colorAccent"
        android:textColorHighlight="@color/colorAccent"
        android:textColorHint="@color/colorLogin.Accent"
        android:textColorLink="@color/colorLogin.Accent" />


    <Button
        android:id="@+id/buttLogin"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_weight="0.08"
        android:layout_marginBottom="15dp"
        android:text="Entrar"
        android:textAlignment="center"
        android:background="#FFD700"
        android:textColor="@color/colorLogin.txtBotaoEntrar"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />


    <TextView
        android:id="@+id/cadastra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:text="Cadastre-se"
        android:textAlignment="center"
        android:textColor="@color/colorLogin.txtCadastrar"
        android:textSize="18sp"
        android:textStyle="bold"/>

</LinearLayout>